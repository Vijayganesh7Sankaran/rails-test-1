
<div style="border:1px solid red" class="col-md-8 col-md-offset-2">
		<div class="well col-md-12" >
		<div class="col-md-12 col-md-offset-1">
			<h3>Login</h3>
			<%= form_for :session, :url => login_path, :html=>{:class =>'col-md-8'} do |f| %>
			<%= f.email_field :email, :placeholder=>'Email',class:'form-control' %><br />
			<%= f.password_field :password,:placeholder=>'Password', class:'form-control' %><br />
			<%= f.submit "Login", :class => 'btn btn-submit' %>
			<% end %>
		</div>
	</div>

</div>
